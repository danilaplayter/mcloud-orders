{
  "info": {
    "name": "Order Service API",
    "description": "API для управления заказами",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"cust-123\",\n  \"items\": [\n    {\n      \"productId\": \"prod-1\",\n      \"quantity\": 2,\n      \"price\": 100.00\n    },\n    {\n      \"productId\": \"prod-2\",\n      \"quantity\": 1,\n      \"price\": 50.00\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1"]
            }
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Orders by Customer",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders?customerId=cust-123",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                {
                  "key": "customerId",
                  "value": "cust-123"
                }
              ]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CONFIRMED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1", "status"]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/orders/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Order Items",
      "item": [
        {
          "name": "Add Item to Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"prod-3\",\n  \"quantity\": 1,\n  \"price\": 75.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/1/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1", "items"]
            }
          }
        },
        {
          "name": "Update Order Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/1/items/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1", "items", "1"]
            }
          }
        },
        {
          "name": "Delete Order Item",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/orders/1/items/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "1", "items", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Health & Metrics",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "metrics"]
            }
          }
        }
      ]
    }
  ]
}